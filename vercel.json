{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "frontend/dist",
    "builds": [
        {
            "src": "backend/src/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "frontend/dist/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/src/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/dist/index.html"
        }
    ]
}