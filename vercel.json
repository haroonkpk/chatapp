{
    "version": 2,
    "builds": [
        {
            "src": "frontend/dist/**",
            "use": "@vercel/static"
        },
        {
            "src": "backend/src/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "frontend/dist/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/src/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/dist/$1"
        }
    ]
}